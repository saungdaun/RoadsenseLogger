<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Connection Status -->
    <TextView
        android:id="@+id/tvConnectionStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DISCONNECTED"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="8dp"
        android:textColor="@android:color/holo_red_dark" />

    <!-- Device Name -->
    <TextView
        android:id="@+id/tvDeviceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Device: -"
        android:textSize="16sp"
        android:gravity="center"
        android:padding="4dp" />

    <!-- Data Display -->
    <TextView android:id="@+id/tvSpeedValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Speed: 0 km/h"
        android:textSize="16sp"
        android:padding="4dp" />

    <TextView android:id="@+id/tvOdoValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Odometer: 0 m"
        android:textSize="16sp"
        android:padding="4dp" />

    <TextView android:id="@+id/tvTripValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trip: 0 m"
        android:textSize="16sp"
        android:padding="4dp" />

    <TextView android:id="@+id/tvSystemState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="System: UNKNOWN"
        android:textSize="16sp"
        android:padding="4dp" />

    <TextView android:id="@+id/tvMaxSpeedValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Max Speed: 0 km/h"
        android:textSize="16sp"
        android:padding="4dp" />

    <TextView android:id="@+id/tvAvgSpeedValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Avg Speed: 0 km/h"
        android:textSize="16sp"
        android:padding="4dp" />

    <TextView android:id="@+id/tvAccelZValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Accel Z: 0 g"
        android:textSize="16sp"
        android:padding="4dp" />

    <TextView android:id="@+id/tvTimeValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time: --:--"
        android:textSize="16sp"
        android:padding="4dp" />

    <TextView android:id="@+id/tvPacketCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Packets: 0"
        android:textSize="16sp"
        android:padding="4dp" />

    <TextView android:id="@+id/tvViewMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View 1/6"
        android:textSize="16sp"
        android:padding="4dp" />

    <!-- Buttons Row 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnConnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect" />

        <Button
            android:id="@+id/btnDisconnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disconnect" />

        <Button
            android:id="@+id/btnScan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan" />
    </LinearLayout>

    <!-- Buttons Row 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start" />

        <Button
            android:id="@+id/btnStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop" />

        <Button
            android:id="@+id/btnPause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pause" />
    </LinearLayout>

    <!-- Buttons Row 3 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnResetTrip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset Trip" />

        <Button
            android:id="@+id/btnNextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next View" />
    </LinearLayout>

    <!-- List of Devices -->
    <ListView
        android:id="@+id/deviceListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp" />

</LinearLayout>
